# Correlated

statement ok
CREATE TABLE votes (
    user_id int,
    post_id int
);

query I nosort
SELECT id FROM posts
WHERE promoted = 1
AND EXISTS (
    SELECT id FROM votes
    JOIN users ON votes.user_id = users.id
    WHERE posts.author_id = users.id
    AND votes.post_id = posts.id
    AND deleted_at IS NULL
)
AND author_id = ?;
? = 1
----

