[Unit]
After=network.target
Description=ReadySet MySQL Adapter

[Service]
ExecStart=/usr/local/bin/readyset-mysql-adapter --no-require-authentication --address 0.0.0.0:3306 --prometheus-metrics
EnvironmentFile=/etc/default/readyset-mysql-adapter
Restart=on-failure

[Install]
WantedBy=multi-user.target
