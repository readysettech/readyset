[Unit]
After=network.target
Description=ReadySet PostgreSQL Adapter
StartLimitIntervalSec=0

[Service]
ExecStart=/usr/local/bin/readyset-psql-adapter --address 0.0.0.0:5432 --prometheus-metrics --authority consul --log-format json --query-log --explicit-migrations --outputs-polling-interval 180 --use-aws-external-address
EnvironmentFile=/etc/default/readyset-psql-adapter
Restart=on-failure
RestartSec=1
LimitNOFILE=100000

[Install]
WantedBy=multi-user.target
