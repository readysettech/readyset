[Unit]
After=network.target
Description=ReadySet MySQL Adapter
StartLimitIntervalSec=0

[Service]
ExecStart=/usr/local/bin/readyset-mysql-adapter --address 0.0.0.0:3306 --prometheus-metrics --authority consul --log-format json --query-log --explicit-migrations --outputs-polling-interval 180 --max-processing-minutes 3 --use-aws-external-address
EnvironmentFile=/etc/default/readyset-mysql-adapter
Restart=on-failure
RestartSec=1
LimitNOFILE=100000

[Install]
WantedBy=multi-user.target
